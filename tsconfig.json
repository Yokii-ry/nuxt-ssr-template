{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "importHelpers": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/webpack-env",
      "@nuxtjs/moment"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist", "modules", "static"],
  "include": [
    "node_modules/vue-tsx-support/enable-check.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.vue"
  ]
}
